@inject Microsoft.AspNetCore.Identity.UserManager<Library.DAL.Models.ApplicationUser> UserManager


<nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
    <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
        <a class="navbar-brand brand-logo-mini align-self-center d-lg-none" asp-controller="Books" asp-action="Index">
            <i class="mdi mdi-library fs-2 menu-icon text-info"></i>
        </a>
        <button class="navbar-toggler navbar-toggler align-self-center me-2" type="button" data-toggle="minimize">
            <i class="mdi mdi-menu"></i>
        </button>
        <ul class="navbar-nav">
            <li class="nav-item border-0">
                @{
                    var user = await UserManager.GetUserAsync(User);
                    if (user != null)
                    {

                        <a class="nav-link" asp-controller="Accounts" asp-action="Profile" asp-route-id="@user.Id">
                            <img class="nav-profile-img me-2" alt="" src="~/files/users/@user.Img">
                            <span class="profile-name">@user.UserName</span>
                        </a>

                    }
                }
           </li>

        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
        </button>
    </div>
</nav>