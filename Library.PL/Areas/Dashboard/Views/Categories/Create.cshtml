@model CategoryVM

@{
    ViewData["Title"] = "Create";
}

@section header  {
    Category
}
@section headerBreadcrumb1 {
    Category
}
@section headerBreadcrumb2 {
    Create
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4 bg-primary text-light p-2 text-center ">Create</h4>
            <form class="forms-sample" asp-controller="Categories" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control border border-1 border-dark">
                </div>
                <div class="form-group">
                    <label asp-for="Image">Book Image</label>
                    <input asp-for="Image" class="form-control border border-1 border-dark">
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary me-2">Create</button>
                <button asp-controller="Categories" asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
